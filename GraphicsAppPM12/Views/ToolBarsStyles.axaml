<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Styles>
        <Style Selector="ToggleButton:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#E1E1E1"/>
        </Style>
        <Style Selector="ToggleButton:checked /template/ ContentPresenter">
            <Setter Property="Background" Value="#C6C6C6"/>
        </Style>
    
        <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#E1E1E1"/>
        </Style>
        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="#C6C6C6"/>
        </Style>
        
        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="#414141"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        
        <Style Selector="Path">
            <Setter Property="Stroke" Value="#606060"/>
            <Setter Property="StrokeThickness" Value="1.8"/>
            <Setter Property="StrokeLineCap" Value="Round"/>
            <Setter Property="StrokeJoin" Value="Round"/>
        </Style>

    </Styles>
    
</Styles>