<Window xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GraphicsApp.ViewModels"     
             mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="100"
             x:Class="GraphicsApp.Views.MessageBoxOk"
             Title="Информация"
             Width="300"
             Height="100">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock x:Name="TextMessage" Text="Перед тем как сохранить изменения, вам необходимо указать путь сохранения, в настройках." TextWrapping="Wrap" TextAlignment="Center" Margin="10,0"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Ок" Click="OnOkClicked" Margin="0,0,10,0" />
        </StackPanel>
    </StackPanel>
    
</Window>