<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:GraphicsApp.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GraphicsApp.Views.MyCanvas"
             x:DataType="vm:CanvasViewModel">

    <!--<UserControl.DataContext>
        <vm:MainWindowViewModel />
    </UserControl.DataContext>-->
    
    
    <ItemsControl  ItemsSource="{Binding Main.Figures}">
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Path Stroke="Black" StrokeThickness="{Binding Thickness}" Data="{Binding Model.Geometry}">
                    <Path.Fill>
                        <SolidColorBrush Color="{Binding SelectedColor}"/>
                    </Path.Fill>
                </Path>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
			
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                    <Canvas Background="White" Margin="15" x:DataType="vm:CanvasViewModel" PointerMoved="MouseMoved" SizeChanged="CanvasResize" PointerExited="MouseLeave" PointerPressed="CreateFigure" Height="500" Width="1000">
                        <Canvas.RenderTransform>
                            <ScaleTransform ScaleX="{Binding ZoomFactor}" ScaleY="{Binding ZoomFactor}" />
                        </Canvas.RenderTransform>
                    </Canvas>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
    </ItemsControl>
    
</UserControl>
